<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Color Brushes-->
    <SolidColorBrush x:Key="Correct_Btn" Color="Green"/>
    <SolidColorBrush x:Key="Wrong_Btn" Color="Red" />

    <ControlTemplate x:Key="ResetTemplate" TargetType="Button">
        <Border Background="{TemplateBinding Background}" 
          TextBlock.Foreground="{TemplateBinding Foreground}" 
          BorderBrush="{TemplateBinding BorderBrush}"
          BorderThickness="{TemplateBinding BorderThickness}">
        <ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </ControlTemplate>
    
    <!-- Styles-->
    <Style x:Key="LettreBtn" TargetType="Button">
        <Setter Property="Background" Value="Beige"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Template" Value="{StaticResource ResetTemplate}"/>
    </Style>
    
    
</ResourceDictionary>