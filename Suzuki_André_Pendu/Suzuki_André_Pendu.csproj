  <ItemGroup>
    <Resource Include="Resources\Hangman\0.gif" />
    <Resource Include="Resources\Hangman\1.gif" />
    <Resource Include="Resources\Hangman\2.gif" />
    <Resource Include="Resources\Hangman\3.gif" />
    <Resource Include="Resources\Hangman\4.gif" />
    <Resource Include="Resources\Hangman\5.gif" />
    <Resource Include="Resources\Hangman\6.gif" />
