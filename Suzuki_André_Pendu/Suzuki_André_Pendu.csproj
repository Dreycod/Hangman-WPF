<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Resources\Icon\Pendu.ico</ApplicationIcon>
    <PackageIcon>Pendu.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
